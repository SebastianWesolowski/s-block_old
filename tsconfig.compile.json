{
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": false,
    "noImplicitAny": true,
    "outDir": "./distTS",
    "paths": {
      "components": ["./src/components"],
      "components/*": ["./src/components/*"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "./node_modules",
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.stories.*",
    "./src/__mocks__",
    "./src/setupTests.ts",
    "./src/index.tsx",
    "./src/react-app-env.d.ts",
    "./src/reportWebVitals.ts",
    "./src/setupTests.ts"
  ],
  "extends": "./tsconfig.json",
  "include": ["./src/**/*"]
}
